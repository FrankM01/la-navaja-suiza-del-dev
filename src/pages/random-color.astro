---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/LinkButton.astro";
import SectionContainer from "@/components/SectionContainer.astro";
---

<Layout title="Color aleatorio" description="Generador de colores aleatorios">
    <main class="px-1 pb-4 md:pb-60 md:px-64">
        <SectionContainer>
            <div
                class="flex flex-col max-w-full justify-center items-center content-center mx-4 mt-32 mb-44 md:m-16 px-4 py-4 border-4 border-black gap-6"
            >
                <p class="text-6xl text-black font-bold" id="color">#2BB807</p>
                <Button id="btn-color">
                    <span>Cambiar Color</span>
                </Button>
            </div>
        </SectionContainer>
    </main>
</Layout>

<script>
    const button = document.getElementById("btn-color");
    const color = document.getElementById("color");

    function generateColor() {
        return "#" + Math.floor(Math.random() * 16777215).toString(16);
    }

    button.addEventListener("click", () => {
        const randomColor = generateColor();
        document.body.style.backgroundColor = randomColor;
        color.textContent = randomColor;
    });
</script>
